<h1 class="text-center mt-4"><%= @user.username %>'s profile</h1>


<%= gravatar_for @user, size: 200 %>
<% if current_user == @user %>
	<%= link_to 'Update profile', edit_user_path, class: 'btn btn-outline-success ml2' %>
	<%= link_to 'Delete profile', user_path(@user), method: :delete, data: { confirm: 'Are you sure you would like to delete?' }, class: 'btn btn-outline-danger'  %>
	<% end %>

<h3 class="text-center mt-4>Articles
	<%= render 'articles/article' %>
</h3>

<div class="mb-5">
      <%= link_to '[ Cancel and return to user listing ]', users_path, class: 'text-info form-group row justify-content-center' %>
</div>