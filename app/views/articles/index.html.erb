<h3>List of articles</h3>
<table>
  <thead>
    <th>Title</th>
    <th>Description</th>
    <th>Actions</th>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.description %></td>
      <td><%= link_to 'Show' %></td>
      <td><%= link_to 'Edit' %></td>
      <td><%= link_to 'Destroy' %></td>
      <td>Placeholder</td>
    </tr>
  </tbody>
  <% end %>
</table>
<%= link_to 'New', new_article_path %>