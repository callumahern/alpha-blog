<div class="container">
  <h3 class='text-center mt-4'>Articles</h3>
  <%= gravatar_for @article.user, size: 0 %>
  <% if @article.categories.any? %>
    <div class="mt-2"><%= render @article.categories %></div> 
  <% end %>

      <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
        <div class="card-header font-italic">Posted by <%= link_to @article.user.username, @user %></div>
        <div class="card-body">
          <h5 class="card-title"><%= link_to @article.title, article_path(@article), class: 'text-success' %></h5>
          <p class="card-text"><%= truncate(@article.description, length: 100) %></p>
          <% if @article.user == current_user %>
            <%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-outline-success' %>
            <%= link_to 'Delete', article_path(@article), method: :delete, data: { confirm: 'Are you sure you would like to delete?' }, class: 'btn btn-outline-danger'  %>
          <% end %>
          </div>
        <div class="card-footer text-muted">
          <small> Created at: <%= time_ago_in_words(@article.created_at) %> edited <%= time_ago_in_words(@article.updated_at) %></small>
        </div>
        </div>
      </div>      
      </div>
      <%= link_to '[ Return to articles listing ]', articles_path, class: 'text-black form-group row justify-content-center' %>

</div>